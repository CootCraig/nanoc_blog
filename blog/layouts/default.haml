!!! 5
%html
  %head
    %meta{:charset => "utf-8"}
    %title
      A Brand new nanoc site -
      = item[:title]
    %link{:rel => "stylesheet", :href => "/assets/app.css" }
    %script{:src => "/assets/modernizr.foundation.js" }
  %body
    .contain-to-grid
      %nav.top-bar
        %ul
          %li.name
            %a{:href => "/"} Coot the Craig's Blog
          %li.toggle-topbar
            %a{:href => "#"}
        %section
          %ul.right
            %li
              %a{:href => "#"} Contact
    .row
      .twelve.columns
        = yield

    %script{:src => "/assets/app.js" }

