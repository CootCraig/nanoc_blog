!!! 5
%html
  %head
    %meta{:charset => "utf-8"}
    %title
      Coot Craig Blog
      = item[:title]
    %link{:rel => "stylesheet", :href => "/assets/app.css" }
    %script{:src => "/assets/modernizr.js" }
    %script{:src => "/assets/jquery-2.0.3.min.js" }
    %script{:src => "/assets/foundation.js" }
  %body
    .header
      .contain-to-grid
        %nav.top-bar
          %ul.title-area
            %li.name
              %a{:href => "/"} Coot Craig Blog
            %li{:class => "toggle-topbar menu-icon"}
              %a{:href => "#"}
                %span Menu
          %section.top-bar-section
            %ul.left
            %ul.right
              %li
                %a{:href => "/blog/"} Blog
              %li
                %a{:href => "#"} Contact
    .row
      .twelve.columns
        = yield

    %script{:src => "/assets/app.js" }

